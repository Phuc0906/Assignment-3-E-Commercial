<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:background="@drawable/custom_sneaker_bg"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/brandText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nike"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="12dp" />

        <TextView
            android:id="@+id/sneakerNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/brandText"
            android:layout_marginStart="12dp"
            android:text="Air Max 1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCart"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/custom_button"
            android:drawableRight="@drawable/add_shopping_cart"
            android:paddingStart="12dp"
            android:paddingEnd="15dp"
            android:text="Add to "
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_below="@id/sneakerNameText"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"/>

        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/logo_bg"
            android:layout_width="140dp"
            android:scaleType="fitXY"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
           android:layout_toRightOf="@+id/btnCart"
            android:layout_marginStart="10dp"/>

        <ImageView
            android:id="@+id/sneakerImg"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/air_max" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>